<?xml version="1.0" encoding="utf-8"?>
<Project DefaultTargets="Build" ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <PrepareForRunDependsOn>$(PrepareForRunDependsOn);MyPostBuildTarget</PrepareForRunDependsOn>
    <ILRepackExePath Condition=" '$(ILRepackPath)' == '' ">$(SolutionDir)packages\ILRepack.2.0.2\tools\ILRepack.exe</ILRepackExePath>
    <ILRepackCommand Condition=" '$(OS)' == 'Windows_NT'">"$(ILRepackExePath)"</ILRepackCommand>
    <MonoPath Condition=" '$(MonoPath)' == '' And Exists('/Library/Frameworks/Mono.framework/Commands/mono') ">/Library/Frameworks/Mono.framework/Commands/mono</MonoPath>
    <MonoPath Condition=" '$(MonoPath)' == '' ">mono</MonoPath>
    <ILRepackCommand Condition=" '$(OS)' != 'Windows_NT' ">$(MonoPath) --runtime=v4.0.30319 "$(ILRepackExePath)"</ILRepackCommand>
  </PropertyGroup>
  <Target Name="MyPostBuildTarget">
    <Exec Command="$(ILRepackCommand) /allowdup:System.Collections.Generic.CollectionExtensions /internalize /targetPlatform:v4 /out:&quot;merged\$(AssemblyName).dll&quot; $(AssemblyName).dll MonoDevelop.DotNet.ProjectModel.dll  Microsoft.DotNet.InternalAbstractions.dll Microsoft.DotNet.ProjectModel.dll Microsoft.Extensions.DependencyModel.dll Newtonsoft.Json.dll NuGet.Common.dll NuGet.Frameworks.dll NuGet.Packaging.dll NuGet.Packaging.Core.dll NuGet.Packaging.Core.Types.dll NuGet.RuntimeModel.dll NuGet.Versioning.dll System.Collections.Immutable.dll System.Reflection.Metadata.dll " WorkingDirectory="$(OutputPath)" />
  </Target>
</Project>